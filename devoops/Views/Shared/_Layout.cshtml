@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - devoops</title>
    <meta name="description" content="@ViewData["Description"]" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/devoops.styles.css" asp-append-version="true" />
</head>
<body>
    <header >
        <article class="p-3" style="background: var(--bs-grandient);">
            <div class="container-md">
                <div>
                    <span class="text-white">
                        <h1>ObrasCorps Analytics</h1>
                        <p>Evolução de Obras - Análise Detalhada</p>
                    </span>
                </div>
            </div>
        </article>
    </header>
    <br>
    <header>
        <article>
            <div class="container-md">
                <nav style="border-radius: 15px;" class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <ul class="navbar-nav flex-grow-1 gap-3 justify-content-center">
                            <li class="nav-item">
                                <a style="display: flex; " class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "") d-flex align-items-center gap-2"
                                asp-controller="Home" asp-action="Index"
                                onmouseover="this.style.color='white'; this.style.backgroundColor='#1e40af'; this.style.borderRadius='5px';"
                                onmouseout="if(!this.classList.contains('active')) { this.style.color='#333'; this.style.backgroundColor='transparent'; this.style.borderRadius='5px'; }">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                                    <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z"/>
                                </svg>
                                Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Projetos" ? "active" : "") d-flex align-items-center gap-2"
                                asp-controller="Projetos" asp-action="Index"
                                onmouseover="this.style.color='white'; this.style.backgroundColor='#1e40af'; this.style.borderRadius='5px';"
                                onmouseout="if(!this.classList.contains('active')) { this.style.color='#333'; this.style.backgroundColor='transparent'; this.style.borderRadius='5px';} ">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-clipboard2" viewBox="0 0 16 16">
                                    <path d="M3.5 2a.5.5 0 0 0-.5.5v12a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5v-12a.5.5 0 0 0-.5-.5H12a.5.5 0 0 1 0-1h.5A1.5 1.5 0 0 1 14 2.5v12a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 14.5v-12A1.5 1.5 0 0 1 3.5 1H4a.5.5 0 0 1 0 1z"/>
                                    <path d="M10 .5a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5.5.5 0 0 1-.5.5.5.5 0 0 0-.5.5V2a.5.5 0 0 0 .5.5h5A.5.5 0 0 0 11 2v-.5a.5.5 0 0 0-.5-.5.5.5 0 0 1-.5-.5"/>
                                </svg>
                                Projetos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Colaboradores" ? "active" : "") d-flex align-items-center gap-2"
                                asp-controller="Colaboradores" asp-action="Index"
                                onmouseover="this.style.color='white'; this.style.backgroundColor='#1e40af'; this.style.borderRadius='5px';"
                                onmouseout="if(!this.classList.contains('active')) { this.style.color='#333'; this.style.backgroundColor='transparent'; this.style.borderRadius='5px'; }">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-people" viewBox="0 0 16 16">
                                    <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1zm-7.978-1L7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002-.014.002zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0M6.936 9.28a6 6 0 0 0-1.23-.247A7 7 0 0 0 5 9c-4 0-5 3-5 4q0 1 1 1h4.216A2.24 2.24 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816M4.92 10A5.5 5.5 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0m3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4"/>
                                </svg>
                                Colaboradores
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Fornecedores" ? "active" : "") d-flex align-items-center gap-2"
                                asp-controller="Fornecedores" asp-action="Index"
                                onmouseover="this.style.color='white'; this.style.backgroundColor='#1e40af'; this.style.borderRadius='5px';"
                                onmouseout="if(!this.classList.contains('active')) { this.style.color='#333'; this.style.backgroundColor='transparent'; this.style.borderRadius='5px'; }">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-buildings" viewBox="0 0 16 16">
                                    <path d="M14.763.075A.5.5 0 0 1 15 .5v15a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5V14h-1v1.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V10a.5.5 0 0 1 .342-.474L6 7.64V4.5a.5.5 0 0 1 .276-.447l8-4a.5.5 0 0 1 .487.022M6 8.694 1 10.36V15h5zM7 15h2v-1.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 .5.5V15h2V1.309l-7 3.5z"/>
                                    <path d="M2 11h1v1H2zm2 0h1v1H4zm-2 2h1v1H2zm2 0h1v1H4zm4-4h1v1H8zm2 0h1v1h-1zm-2 2h1v1H8zm2 0h1v1h-1zm2-2h1v1h-1zm0 2h1v1h-1zM8 7h1v1H8zm2 0h1v1h-1zm2 0h1v1h-1zM8 5h1v1H8zm2 0h1v1h-1zm2 0h1v1h-1zm0-2h1v1h-1z"/>
                                </svg>                         
                                Fornecedores
                                </a>
                            </li>
                        </ul>

                        </div>
                    </div>
                </nav>
            </div>    
        </article>        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - devoops - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
